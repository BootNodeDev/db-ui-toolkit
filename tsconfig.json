{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "custom.d.ts"],
  "exclude": ["node_modules", "dist", "src/home/index.tsx", "src/home/GlobalStyles.tsx"]
}
